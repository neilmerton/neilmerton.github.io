---
import { formatDate } from "../utils";

interface Props {
  book: {
    slug: string;
    data: {
      title: string;
      author: string;
      rating?: number;
      thoughts?: string;
      tags: string[];
      finishedDate?: Date;
    };
  };
  Content: any; // For inline markdown content
}

const { book, Content } = Astro.props as Props;

function renderStars(rating: number): string {
  return "★".repeat(rating) + "☆".repeat(5 - rating);
}
---

<article aria-labelledby={`book-title-${book.slug}`}>
  <header class="book-card__header">
    <div class="book-card__info">
      <h3 id={`book-title-${book.slug}`} class="book-card__title">
        {book.data.title}
      </h3>
      <p class="book-card__author">by {book.data.author}</p>
    </div>

    {
      book.data.rating && (
        <p
          class="book-card__rating"
          aria-label={`Rating: ${book.data.rating} out of 5 stars`}
          title={`${book.data.rating}/5`}
        >
          <span aria-hidden="true">{renderStars(book.data.rating)}</span>
        </p>
      )
    }
  </header>

  {
    book.data.thoughts && (
      <p class="book-card__thoughts">{book.data.thoughts}</p>
    )
  }

  {/* Render inline markdown body if present */}
  <div class="book-card__body prose">
    <Content />
  </div>

  <footer class="book-card__footer">
    {
      book.data.tags.length > 0 && (
        <ul class="book-card__tags" role="list" aria-label="Tags">
          {book.data.tags.map((tag) => (
            <li>
              <a href={`/reading?tag=${encodeURIComponent(tag)}`} class="tag">
                {tag}
              </a>
            </li>
          ))}
        </ul>
      )
    }

    {
      book.data.finishedDate && (
        <time
          class="book-card__date"
          datetime={book.data.finishedDate.toISOString()}
        >
          Finished {formatDate(book.data.finishedDate, true)}
        </time>
      )
    }
  </footer>
</article>

<style>
  .book-card__header {
    align-items: flex-start;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-6);
    justify-content: space-between;
    margin-block-end: var(--space-3);
  }

  .book-card__title {
    color: var(--color-text);
    font-family: var(--font-display);
    font-size: var(--text-lg);
    margin-block-end: var(--space-1);
  }

  .book-card__author {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .book-card__rating {
    color: var(--color-accent);
    flex-shrink: 0;
    font-size: var(--text-base);
    letter-spacing: var(--tracking-wider);
  }

  .book-card__thoughts {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    font-style: italic;
    line-height: var(--leading-relaxed);
    margin-block-end: var(--space-4);
    max-width: 65ch;
  }

  .book-card__body {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .book-card__body:empty {
    display: none;
  }

  .book-card__footer {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: space-between;
    margin-block-start: var(--space-4);
  }

  .book-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .book-card__date {
    color: var(--color-text-subtle);
    font-size: var(--text-xs);
    font-variant-numeric: tabular-nums;
  }
</style>
