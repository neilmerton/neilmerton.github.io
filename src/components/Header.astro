---
import HeaderLink from "./HeaderLink.astro";
import Icon from "./Icon.astro";
import { SITE_TITLE, SOCIAL_LINKS } from "../constants";
---

<header>
  <nav>
    <a aria-label="Neil's homepage" href="/">{SITE_TITLE}</a>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="social-links">
      {
        SOCIAL_LINKS.map((link) => (
          <a href={link.href} target="_blank">
            <span class="sr-only">{link.description}</span>
            <Icon icon={link.icon} color="var(--accent)" size="1.5rem" />
          </a>
        ))
      }
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background-color: rgb(var(--surface-background));
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    font-size: 1em;
    font-weight: 500;
    margin: 0;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    align-items: center;
    display: flex;
    gap: 0.5rem;
    justify-content: space-between;
  }
  nav a {
    color: var(--black);
    border-bottom: 0.2rem solid transparent;
    padding: 1em 1em 0.8rem;
    text-decoration: none;
  }
  nav a.active {
    border-bottom-color: var(--accent-dark);
    color: var(--accent);
    text-decoration: none;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
