---
import Layout from "@layouts/Layout.astro";
import SocialLinks from "@components/SocialLinks.astro";
import { siteConfig } from "../data";
---

<Layout title="Contact" description={`Get in touch with ${siteConfig.name}.`}>
  <div class="container">
    <header class="page-hero animate-in">
      <span class="page-hero__eyebrow">Contact</span>
      <h1 class="page-hero__title">Get in touch</h1>
      <p class="page-hero__subtitle">
        Have a project in mind, a question, or just want to say hi? I'd love to
        hear from you.
      </p>
    </header>

    <div class="contact-body animate-in animate-in--delay-1">
      <section class="contact-section" aria-labelledby="email-heading">
        <h2 id="email-heading" class="contact-section__title">Email</h2>
        <p class="contact-section__body">
          The best way to reach me is by email. I try to respond within a couple
          of days, though it may take longer during busy periods.
        </p>
        <a
          href={`mailto:${siteConfig.email}`}
          class="contact-email"
          aria-label={`Send an email to ${siteConfig.email}`}
        >
          {siteConfig.email}
        </a>
      </section>

      {
        siteConfig.socials.length > 0 && (
          <section class="contact-section" aria-labelledby="socials-heading">
            <h2 id="socials-heading" class="contact-section__title">
              Elsewhere
            </h2>
            <p class="contact-section__body">
              You can also find me on the following platforms:
            </p>
            <SocialLinks
              links={siteConfig.socials}
              size="large"
              showLabel={true}
            />
          </section>
        )
      }

      <section
        class="contact-section contact-availability"
        aria-labelledby="availability-heading"
      >
        <h2 id="availability-heading" class="contact-section__title">
          Availability
        </h2>
        <p class="contact-section__body">
          I'm currently <strong>open to new opportunities</strong> â€” both full-time
          roles and interesting freelance projects. If you think we'd work well together,
          please get in touch.
        </p>
        <!-- 
          Update this section to reflect your actual availability.
          Examples: 
            "Not currently available for new work."
            "Available from March 2025."
            "Open to contract/freelance projects only."
        -->
      </section>
    </div>
  </div>
</Layout>

<style>
  .contact-body {
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
    padding-block-end: var(--space-24);
  }

  .contact-section {
    border-block-end: 1px solid var(--color-border-light);
    padding-block-end: var(--space-12);
  }

  .contact-section:last-child {
    border-block-end: none;
  }

  .contact-section__title {
    color: var(--color-text-muted);
    font-family: var(--font-body);
    font-size: var(--text-xs);
    letter-spacing: var(--tracking-wider);
    margin-block-end: var(--space-4);
    text-transform: uppercase;
  }

  .contact-section__body {
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    max-width: 55ch;
    margin-block-end: var(--space-6);
  }

  .contact-email {
    align-items: center;
    color: var(--color-text);
    display: inline-flex;
    font-family: var(--font-display);
    font-size: clamp(var(--text-xl), 3vw, var(--text-3xl));
    letter-spacing: var(--tracking-tight);
    text-decoration: underline;
    text-decoration-color: var(--color-accent);
    text-underline-offset: var(--space-2);
    transition:
      color var(--transition-fast),
      text-decoration-color var(--transition-fast);

    &:hover {
      color: var(--color-accent);
      text-decoration-color: var(--color-accent-hover);
    }
  }

  .contact-availability .contact-section__body strong {
    color: var(--color-text);
  }
</style>
